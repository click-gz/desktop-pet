# ==================== Redis 配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================== 服务器配置 ====================
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# ==================== 安全配置 ====================
# 管理员令牌（生产环境务必修改！）
ADMIN_TOKEN=your_secret_admin_token_here

# 可选：用户名密码登录
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# JWT 密钥（可选，用于 Session）
JWT_SECRET_KEY=your_jwt_secret_key_here

# ==================== CORS 配置 ====================
# 允许的来源（生产环境请配置具体域名）
ALLOW_ORIGINS=*

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FILE=logs/admin.log

# ==================== 功能开关 ====================
# 启用危险操作（删除、清空数据库）
ENABLE_DANGEROUS_OPERATIONS=true

# 数据导出功能
ENABLE_DATA_EXPORT=true

# ==================== 其他配置 ====================
# 数据分页大小
DEFAULT_PAGE_SIZE=20

# Session 过期时间（秒）
SESSION_EXPIRE_TIME=3600

